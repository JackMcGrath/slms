{% extends 'ZerebralFrontendBundle::blueLayout.html.twig' %}

{% block header %}
    <div class="navbar navbar-inverse navbar-fixed-top signup">
        <div class="navbar-inner">
            <div class="container">
                <a class="brand" href="{{ path('dashboard') }}"></a>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <script type="text/javascript">
        $(document).ready(function() {
            $('#sendLinkButton').click(function() {
                $(this).attr('disabled', true);
                $('#resetForm').submit();
            });
        });
    </script>
    <div class="container top-center signin-container">
        <form id="resetForm" class="form-signin" action="{{ path("_forgot_password") }}" method="post">
            <label>Email Address:</label>
            <input type="text" placeholder="Email Address" name="_username" value="" tabindex="1"/>

            <div class="clearfix"></div>
            {% if error %}
                <div class="alert alert-error">
                    {{ error }}
                </div>
            {% endif %}
            <input id="sendLinkButton" class="btn btn-primary span12" type="submit" value="Send activation link" tabindex="3"/>
        </form>
        <a href="{{ path('signup') }}" class="signup">Create a new Zerebral account</a>
    </div>
{% endblock %}

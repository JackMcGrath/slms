{% extends 'ZerebralFrontendBundle::blueLayout.html.twig' %}


{% block content %}
    <div class="container top-center signin-container">
        <form class="form-signin" action="{{ path("_security_check") }}" method="post">
            <label>Email Address:</label>
            <input type="text" placeholder="Email Adress" name="_username" value="{{ last_username }}"/>

            <label>Password: <a href="#" class="pull-right"> Forget your password?</a></label>
            <input type="password" placeholder="Password" name="_password"/>

            <div class="clearfix"></div>
            {% if error %}
                <div class="alert alert-error">{{ error.message }}</div>
            {% endif %}
            {% if passwordRestored %}
                <div class="alert alert-success">Password successfully changed! You can now access your account.</div>
            {% endif %}
            <input class="btn btn-primary span12" type="submit"  value="Sign in" />
        </form>
        <div class="text-center">
            <h3><strong>Ze</strong>rebral</h3>
        </div>
    </div>
{% endblock %}

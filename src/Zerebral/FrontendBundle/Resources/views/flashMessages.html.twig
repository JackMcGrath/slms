        <div class="alert {%if level == 'warning'%}alert-info{%elseif level == 'success'%}alert-success{%endif%}">
            <button type="button" class="close" data-dismiss="alert">Ã—</button>
            <strong>{{title}}</strong> {{app.session.getFlash(name) | raw}}
        </div>
    {% endif%}
{% endmacro %}